<div class="container">
  <a class="return-link" href="/figure" onclick="return confirm('The progress will not be saved!');">
    <i class="fa-solid fa-chevron-left"></i>
    Return
  </a>
  <hr>
</div>
<div class="container col-md-6" id="edit-product-container">
  <div class="row">
    <form action="/figure/edit/{{figure._id}}" method="post">
      <h1 class="text text-center mt-3">Update figure</h1>

      <div class="mt-3">
        <label class="h5 text">Name</label>
        <input class="form-control" type="text" name="name" value="{{figure.name}}" required>
      </div>


      <div class="mt-3">
        <label class="h5 text">Price</label>
        <input class="form-control" type="number" name="price" min="1" value="{{figure.price}}" required>
      </div>

      <div class="mt-3">
        <label class="h5 text">Quantity</label>
        <input class="form-control" type="number" name="quantity" min="1" value="{{figure.quantity}}" required>
      </div>

      <div class="mt-3">
        <label class="h5 text">Image (URL):</label>
        <img src="{{figure.image}}" width="100px">
        <input class="form-control" type="text" name="image" value="{{figure.image}}" required>
      </div>

      <div class="mt-3">
        <label class="h5 text">Category</label>
        <input class="form-control" type="text" name="category" value="figure" readonly>
      </div>

      <div class="mt-3">
        <label class="h5 text">Description</label>
        <input class="form-control" type="text" name="description" value="{{figure.description}}" required>
      </div>

      <div class="text-center my-3">
        <input class="add-button px-5 text-xl" type="submit" value="Update">
      </div>
    </form>
  </div>
</div>

<style>
  .return-link {
    text-decoration: none;
    color: #000;
    font-size: 20px;
  }
  #edit-product-container {
    border: 2px solid black;
    border-radius: 10px;
  }
</style>